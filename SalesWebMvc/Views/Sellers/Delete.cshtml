@model SalesWebMvc.Models.Seller;

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que quer deletar isso?</h3>

<div>
    <h4>Seller</h4>
    <hr /> <!--pula linha-->
    <dl class="dl-horizontal">
        <dt>
            <!--dt mostra o nome do campo-->
            @Html.DisplayNameFor(model => model.Name);
        </dt>
        <dd>
            <!-- dd mostra o valor do campo-->
            @Html.DisplayFor(model => model.Name);
        </dd>
        <dt>
            <!--dt mostra o nome do campo-->
            @Html.DisplayNameFor(model => model.Email);
        </dt>
        <dd>
            <!-- dd mostra o valor do campo-->
            @Html.DisplayFor(model => model.Email);
        </dd>
        <dt>
            <!--dt mostra o nome do campo-->
            @Html.DisplayNameFor(model => model.BirthDate);
        </dt>
        <dd>
            <!-- dd mostra o valor do campo-->
            @Html.DisplayFor(model => model.BirthDate);
        </dd>
        <dt>
            <!--dt mostra o nome do campo-->
            @Html.DisplayNameFor(model => model.Salary);
        </dt>
        <dd>
            <!-- dd mostra o valor do campo-->
            @Html.DisplayFor(model => model.Salary);
        </dd>
    </dl> <!--dl lista os campos do objeto-->

        <!-- form pra ter um botaozinho de confirmar ou cancelar deleção-->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" /> <!-- oculto pra deletar-->
           <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index">Voltar a lista</a>
        </form>
</div>

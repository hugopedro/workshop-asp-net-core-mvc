<div>
    <h4>Detalhes</h4>
    <hr /> <!--pula linha-->
    <dl class="dl-horizontal">
        <dt>
            <!--dt mostra o nome do campo-->
            @Html.DisplayNameFor(model => model.Name);
        </dt>
        <dd>
            <!-- dd mostra o valor do campo-->
            @Html.DisplayFor(model => model.Name);
        </dd>
        <dt>
            <!--dt mostra o nome do campo-->
            @Html.DisplayNameFor(model => model.Email);
        </dt>
        <dd>
            <!-- dd mostra o valor do campo-->
